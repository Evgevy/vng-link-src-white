mixin popup()
    .popup.popup--hide 
        .popup__content
            .popup__titles 
                .popup__close
                    <svg width="40.000000" height="40.000000" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <defs>
                        <clipPath id="clip1029_6731">
                            <rect id="close" width="40.000000" height="40.000000" fill="white" fill-opacity="0"/>
                        </clipPath>
                    </defs>
                    <g clip-path="url(#clip1029_6731)">
                        <path id="Vector" d="M10.6641 30.5127L9.48438 29.3333L18.8203 20L9.48438 10.6665L10.6641 9.48706L20 18.8203L29.3281 9.48706L30.5078 10.6665L21.1797 20L30.5078 29.3333L29.3281 30.5127L20 21.1794L10.6641 30.5127Z" fill="#182C8F" fill-opacity="1.000000" fill-rule="nonzero"/>
                        <path id="Vector" d="M9.48438 29.3333L18.8203 20L9.48438 10.6665L10.6641 9.48706L20 18.8203L29.3281 9.48706L30.5078 10.6665L21.1797 20L30.5078 29.3333L29.3281 30.5127L20 21.1794L10.6641 30.5127L9.48438 29.3333Z" stroke="#182C8F" stroke-opacity="1.000000" stroke-width="1.000000"/>
                    </g>
                    </svg>
                h2.popup__title Leave a request
                p.popup__text Leave your contacts and our manager will contact you as soon as possible
            form(method="post")
                +custom-input({
                    label: "Your Name",
                    type: "text",
                    name: "name",
                    placeholder: "You full Name"
                }).form__input
                +custom-input({
                    label: "Phone number",
                    type: "tel",
                    name: "phone",
                    placeholder: "(___)-___-__-__"
                }).form__input
                +custom-textarea({
                    label: "Your question",
                    name: "question",
                    placeholder: "Message"
                }).form__input-text
                button(type="submit").form__btn submit
                p.form__agreement By clicking on the «Submit» button, you agree with the personal data processing policy 
        .popup__background